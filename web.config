<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        
        <!-- Handler para Django via wfastcgi -->
        <handlers>
            <add name="Python FastCGI"
                 path="*"
                 verb="*"
                 modules="FastCgiModule"
                 scriptProcessor="C:\Python311\python.exe|C:\Python311\Lib\site-packages\wfastcgi.py"
                 resourceType="Unspecified"
                 requireAccess="Script" />
        </handlers>
        
        <!-- OCULTAR VERSÃO DO SERVIDOR -->
        <security>
            <requestFiltering removeServerHeader="true">
                <!-- Desabilitar métodos HTTP inseguros -->
                <verbs allowUnlisted="true">
                    <add verb="TRACE" allowed="false" />
                    <add verb="TRACK" allowed="false" />
                    <add verb="OPTIONS" allowed="false" />
                </verbs>
                <!-- Bloquear extensões perigosas -->
                <fileExtensions>
                    <add fileExtension=".bak" allowed="false" />
                    <add fileExtension=".config" allowed="false" />
                    <add fileExtension=".sql" allowed="false" />
                    <add fileExtension=".py" allowed="false" />
                    <add fileExtension=".env" allowed="false" />
                </fileExtensions>
                <!-- Bloquear arquivos ocultos -->
                <hiddenSegments>
                    <add segment=".git" />
                    <add segment=".env" />
                    <add segment="__pycache__" />
                    <add segment=".vscode" />
                </hiddenSegments>
            </requestFiltering>
            
            <!-- Desabilitar listagem de diretórios -->
            <directoryBrowse enabled="false" />
        </security>
        
        <!-- CABEÇALHOS DE SEGURANÇA HTTP -->
        <httpProtocol>
            <customHeaders>
                <!-- Remover cabeçalhos que expõem informações -->
                <remove name="X-Powered-By" />
                <remove name="Server" />
                
                <!-- Cabeçalhos de segurança -->
                <add name="X-Frame-Options" value="DENY" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains; preload" />
                <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; frame-ancestors 'none';" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                <add name="Permissions-Policy" value="geolocation=(), microphone=(), camera=()" />
            </customHeaders>
        </httpProtocol>
        
        <!-- FORÇAR HTTPS -->
        <rewrite>
            <rules>
                <rule name="Forçar HTTPS" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="off" ignoreCase="true" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
                </rule>
            </rules>
            <!-- Remover Server header nas respostas -->
            <outboundRules>
                <rule name="Remove Server Header">
                    <match serverVariable="RESPONSE_Server" pattern=".+" />
                    <action type="Rewrite" value="" />
                </rule>
            </outboundRules>
        </rewrite>
        
        <!-- Páginas de erro customizadas (sem detalhes) -->
        <httpErrors errorMode="Custom" existingResponse="Replace">
            <remove statusCode="404" />
            <remove statusCode="500" />
            <error statusCode="404" path="/erro/404" responseMode="ExecuteURL" />
            <error statusCode="500" path="/erro/500" responseMode="ExecuteURL" />
        </httpErrors>
        
    </system.webServer>
    
    <appSettings>
        <add key="WSGI_HANDLER" value="django.core.wsgi.get_wsgi_application()" />
        <add key="PYTHONPATH" value="C:\inetpub\wwwroot\Projeto-Integrador-89-ws" />
        <add key="DJANGO_SETTINGS_MODULE" value="projeto.settings" />
    </appSettings>
</configuration>
