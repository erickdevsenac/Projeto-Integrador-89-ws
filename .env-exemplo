# ==============================================================================
# CONFIGURAÇÕES BÁSICAS
# ==============================================================================

# Chave secreta usada pelo Django — gere uma nova para produção!
SECRET_KEY=troque_esta_chave_gerada_pela_producao

# Define o modo de execução: True para desenvolvimento, False para produção
DEBUG=True

# Lista de domínios permitidos
ALLOWED_HOSTS=localhost,127.0.0.1


# ==============================================================================
# BANCO DE DADOS
# ==============================================================================

# Define se o projeto deve usar um banco de dados de produção (True) ou local (False)
USE_PRODUCTION_DB=False

# Configurações para o banco de produção (ativadas apenas se USE_PRODUCTION_DB=True)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=nome_do_banco
# DB_USER=usuario_db
# DB_PASSWORD=senha_db
# DB_HOST=localhost
# DB_PORT=5432

# Alternativa: usar uma URL de conexão única (Heroku, Render, etc.)
# DATABASE_URL=postgres://usuario:senha@host:5432/nome_do_banco


# ==============================================================================
# CACHE E SESSÕES (Redis recomendado)
# ==============================================================================

USE_CACHE=True
REDIS_URL=redis://127.0.0.1:6379/1


# ==============================================================================
# ARMAZENAMENTO DE ARQUIVOS (S3 opcional)
# ==============================================================================

# Define se o sistema deve usar S3 para armazenar arquivos estáticos e de mídia
USE_S3=False

# Se USE_S3=True, preencha as credenciais abaixo:
# AWS_ACCESS_KEY_ID=sua_access_key
# AWS_SECRET_ACCESS_KEY=sua_secret_key
# AWS_STORAGE_BUCKET_NAME=nome_do_bucket
# AWS_S3_REGION_NAME=us-east-1


# ==============================================================================
# EMAIL
# ==============================================================================

# Backend padrão: console (não envia e-mails, apenas exibe no terminal)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Para produção, altere para SMTP e configure os parâmetros abaixo:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=seu_email@gmail.com
# EMAIL_HOST_PASSWORD=sua_senha
# DEFAULT_FROM_EMAIL=noreply@seudominio.com


# ==============================================================================
# CORS (Cross-Origin Resource Sharing)
# ==============================================================================

# Domínios que podem acessar sua API (front-end, apps, etc.)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000


# ==============================================================================
# CELERY (opcional, para tarefas assíncronas)
# ==============================================================================

USE_CELERY=False

# Caso use Celery + Redis:
# CELERY_BROKER_URL=redis://127.0.0.1:6379/0
# CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0


# ==============================================================================
# SEGURANÇA (somente para produção)
# ==============================================================================

# Força redirecionamento HTTPS (True em produção)
SECURE_SSL_REDIRECT=False
